<div class="container__reward cart-margins__inline">
  <div
    id="data-reward"
    data-amount-free-shipping="{{ amount_free_shipping }}"
    data-amount-product-one="{{ amount_reward_one }}"
    data-product-one="{{ product_reward_one.variants[0].id }}"
    data-amount-product-two="{{ amount_reward_two }}"
    data-product-two="{{ product_reward_two.variants[0].id}}"
    data-limit-price="{{ limit_price }}"
    data-cart-total="{{ cart_total }}"
    data-active-reward-one="{{ active_reward_one }}"
    data-active-reward-two="{{ active_reward_two }}"
  >
  </div>
  <div class="container__reward-bar">
    <div class="container__reward-bar--progress progress-js">
    </div>
  </div>

  <div class="container__reward-content">
    
    <div class="container__reward-content--reward">   
        <p 
          class="point-shipping
          {% unless active_reward_one or  active_reward_two %}
            point-none
          {% endunless %}
          "
        >
          |
        </p> 
      
      ${{ amount_free_shipping }} = {{ text_free_shipping }}
    </div>
    
    {% if active_reward_one %}
      <div class="container__reward-content--reward">
        <p class="point-product-one">|</p> 
        ${{ amount_reward_one }} = {{ text_reward_one }}
      </div>
    {% endif %}
    {% if active_reward_two %}
      <div class="container__reward-content--reward"> 
        <p class="point-product-two">|</p> 
        ${{ amount_reward_two }} = {{ text_reward_two }}
      </div>
    {% endif %}

  </div>
</div>