{% comment %}
  Render footer in cart
  
  Accepts:
  - cart: {Object} cart object
  - shipping_info: {String} shipping info in cart
  - checkout_button: {String} text for checkout button

  Usage:
  {% render 'cart-footer'
    cart: cart,
    shipping_info: section.settings.shipping_info,
    checkout_button: section.settings.checkout_button
  %}
{% endcomment %}
<div id="container-footer-js">
    <div class="cart-footer cart-margins__inline">
      <div class="cart-footer__shipping">
        <span>{{ shipping_info }}</span>
      </div>
      <div
        class="cart-footer__button"
        id="cart-footer__button"
      >
        {% capture content_button %}
          {{ "sections.cart.checkout" | t }} 
          <span id="total-price">
            {{ cart.total_price | money }}
          </span>
        {% endcapture %}

        <form action="/checkout">
          <input 
            id="code-discount"
            type="hidden" 
            name="discount" 
            value="" 
            class="discount-checkout"
          >

          <div class="containet-btn-js">
            {% if cart.item_count > 0 %}
              {% render 'button'
                class: "cart-footer__button--btn btn-checkout-js",
                content: content_button,
                type: 1
                size: 1
                action: "submit"
              %}
            {% endif %}
          </div>
          
        </form>
          
        
      </div>
    </div>
</div>