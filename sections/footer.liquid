<div class="grid wrapper footer-blocks">
  {% for block in section.blocks %}
    {% case block.type %}

      {% when "link_list" %}
        <div class="footer-blocks_linklist">
          {% if block.settings.heading != blank %}
            <span class="footer-title">
              {{ block.settings.heading }}
            </span>
          {% endif %}
          {% if block.settings.menu != blank %}
            <ul class="footer-list">
              {% for link in linklists[block.settings.menu].links %}
                <li>
                  <a
                    href="{{ link.url }}"
                    title="{{ link.title }}">
                    {{ link.title }}
                  </a>
                </li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>

      {% when "newslatter" %}
        <div class="footer-blocks_newslatter">
          {% if block.settings.newsletter_heading != blank %}
            <span class="footer-title">
              {{ block.settings.newsletter_heading }}
            </span>
          {% endif %}
          {% if block.settings.newsletter_sub != blank %}
            <span class="footer-subtitle">
              {{ block.settings.newsletter_sub }}
            </span>
          {% endif %}
          {%- form 'customer', id: 'ContactFooter', class: "newslatter-form" -%}
            <input
              type="hidden"
              name="contact[tags]"
              value="newsletter"
            />

            <div class="form__textfield footer-newslatter">
              <input
                id="NewsletterForm--{{ section.id }}"
                type="email"
                name="contact[email]"
                value="{{ form.email }}"
                aria-required="true"
                autocorrect="off"
                autocapitalize="off"
                autocomplete="email"
                {% if form.errors %}
                  autofocus
                  aria-invalid="true"
                  aria-describedby="ContactFooter-error"
                {% elsif form.posted_successfully? %}
                  aria-describedby="ContactFooter-success"
                {% endif %}
                placeholder="{{ 'newsletter.label' | t }}"
                required
              />
              <label for="NewsletterForm--{{ section.id }}">
                {{ 'newsletter.label' | t }}
              </label>
              <button
                type="submit"
                name="commit"
                id="Subscribe"
                aria-label="{{ 'newsletter.button_label' | t }}"
              >
                {% render 'icon-arrow' %}
              </button>
            </div>

            {%- if form.errors -%}
              <small id="ContactFooter-error">
                {{ form.errors.translated_fields['email'] | capitalize }}
                {{ form.errors.messages['email'] }}
              </small>
            {%- endif -%}

            {%- if form.posted_successfully? -%}
              <h3
                id="ContactFooter-success"
                tabindex="-1"
                autofocus
              >
                ✓ {{ 'newsletter.success' | t }}
              </h3>
            {%- endif -%}
          {%- endform -%}
        </div>

      {% when "info" %}
        <div class="footer-blocks_info">
          {% if block.settings.heading %}
            <h2 class="footer-title">
              {{ block.settings.heading }}
            </h2>
          {% endif %}
          {% if block.settings.sub %}
            <p class="footer-subtitle">
              {{ block.settings.sub }}
            </p>
          {% endif %}
        </div>

    {% endcase %}
  {% endfor %}
</div>

<div>
  {% if section.settings.social_media %}
    {% render 'media-icons'
      order_media: 'facebook twitter pinterest'
    %}
  {% endif %}

  {% if section.settings.sub_footer != blank %}
  <span>
    {{ section.settings.sub_footer }}
  </span>
  {% endif %}
</div>

<!-- eslint-disable max-len -->
{% schema %}
{
  "name": "t:sections.footer.name",
  "tag": "footer",
  "class": "footer",
  "blocks": [
    {
      "type": "link_list",
      "name": "t:sections.footer.blocks.link_list.name",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Quick links",
          "label": "t:sections.footer.blocks.link_list.settings.heading.label",
          "info": "t:sections.footer.blocks.link_list.settings.heading.info"
        },
        {
          "type": "link_list",
          "id": "menu",
          "default": "footer",
          "label": "t:sections.footer.blocks.link_list.settings.menu.label",
          "info": "t:sections.footer.blocks.link_list.settings.menu.info"
        }
      ]
    },
    {
      "type": "newslatter",
      "name": "t:sections.footer.settings.header__1.content",
      "settings": [
        {
          "type": "text",
          "id": "newsletter_heading",
          "default": "Subscribe to our emails",
          "label": "t:sections.footer.settings.newsletter_heading.label"
        },
        {
          "type": "text",
          "id": "newsletter_sub",
          "default": "Subscribe to receive special offers, free gifts and unique deals",
          "label": "Sub-heading newslatter"
        }
      ]
    },
    {
      "type": "info",
      "name": "Only information",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Powered by Gradiweb",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "sub",
          "default": "Modules: JS - SCSS, Based in components and DRY CODE",
          "label": "Text"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "sub_footer",
      "default": "© 2022, theme-base Powered by Gradiweb",
      "label": "t:sections.footer.blocks.text.name"
    },
    {
      "type": "checkbox",
      "id": "social_media",
      "label": "Display social media snippet",
      "default": true
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "link_list"
      },
      {
        "type": "link_list"
      },
      {
        "type": "newslatter"
      }
    ]
  }
}
{% endschema %}
